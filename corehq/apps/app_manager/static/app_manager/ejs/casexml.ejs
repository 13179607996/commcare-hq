<h4>Cases and Referrals <span class="help-link" data-help-key="app_manager/casexml_overview"></span></h4>
<div class="help-text" data-help-key="app_manager/casexml_overview"></div>
[% if(questions) { %]
    <div class="casexml config">
        <ul>
            <li>
                [% if(edit) { %]
                <form id="requires_form" action="[%= save_requires_url %]" method="post">
                [% } %]
                    Requires
                    [%= renderOptions([
                        {value: "none", label: "neither a case nor a referral"},
                        {value: "case", label: "just a case"},
                        {value: "referral", label: "a case and a referral"}
                    ], requires, 'requires') %]
                [% if(edit) { %]
                    <input type="hidden" name="ajax" value="false" />
                </form>
                [% } %]
            </li>
        </ul>
        <ul>
            [% if(requires == "none") { %]
                [%= renderAction("open_case", "Opens a case") %]
            [% } %]
            [%= renderAction("update_case", "Updates the case") %]
            [% if(requires != "none") { %]
                [%= renderAction("close_case", "Closes the case") %]
            [% } %]
            [% if(requires != "referral") { %]
                [%= renderAction("open_referral", "Open a referral") %]
            [% } %]
            [% if(requires == "referral") { %]
                [%= renderAction("update_referral", "Update the referral") %]
                [%= renderAction("close_referral", "Close the referral") %]
            [% } %]
        </ul>
        [% if(edit) { %]
            <form action="[%= save_url %]" method="POST">
                <textarea id="casexml_json" class="hidden" name="actions" >[%= JSON.stringify(actions) %]</textarea><br/>
                <input type="submit" value="Save Actions"/>
            </form>
        [% } %]
    </div>
[% } else { %]
    <p class="warning">
        I'm unable to get a list of questions from your form. This may mean that your form is corrupted or
        malformed.
    </p>
[% } %]